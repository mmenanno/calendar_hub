<div id="mapping_test_result" class="rounded-lg border border-slate-800 bg-slate-900/60 p-3 text-sm">
  <% if input.present? %>
    <p class="text-slate-400">Input</p>
    <p class="font-mono text-slate-200"><%= input %></p>
    <p class="mt-2 text-slate-400">Output</p>
    <p class="font-mono text-emerald-200"><%= output %></p>
  <% else %>
    <p class="text-slate-400">Enter a title and test to preview mapping.</p>
  <% end %>
</div>
