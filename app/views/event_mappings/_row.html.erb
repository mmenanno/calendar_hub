  <tr id="<%= dom_id(mapping, :row) %>" class="text-slate-300" draggable="true" data-id="<%= mapping.id %>" data-sortable-target="item">
    <td class="px-3 py-2 drag-handle text-slate-400">â‰¡</td>
    <td class="px-3 py-2"><%= mapping.calendar_source&.name || t("common.states.all") %></td>
    <td class="px-3 py-2"><%= mapping.match_type.humanize %></td>
    <td class="px-3 py-2 font-mono"><%= mapping.pattern %></td>
    <td class="px-3 py-2 font-mono"><%= mapping.replacement %></td>
    <td class="px-3 py-2"><%= mapping.case_sensitive ? "Aa" : "aa" %></td>
    <td class="px-3 py-2">
      <%= form_with url: toggle_event_mapping_path(mapping), method: :patch, data: { turbo_stream: true }, class: "inline-flex" do %>
        <% on = mapping.active? %>
        <button type="submit" class="inline-flex items-center gap-2 rounded-full border border-slate-700 bg-slate-800 px-2 py-1 text-xs text-slate-300 transition hover:border-slate-500">
          <span class="relative inline-flex h-4 w-8 items-center rounded-full transition <%= on ? "bg-emerald-600/70" : "bg-slate-700" %>">
            <span class="inline-block h-3 w-3 transform rounded-full bg-white transition <%= on ? "translate-x-4" : "translate-x-1" %>"></span>
          </span>
          <span class="<%= on ? "text-emerald-300" : "text-slate-400" %>"><%= on ? t("common.states.on") : t("common.states.off") %></span>
        </button>
      <% end %>
    </td>
    <td class="px-3 py-2 pr-6 text-right">
      <div class="inline-flex items-center gap-2">
        <%= link_to t("common.actions.edit"), edit_event_mapping_path(mapping), data: { turbo_frame: "modal" }, class: "cursor-pointer rounded-lg border border-slate-700 px-2 py-1 text-xs text-slate-200 hover:border-slate-500" %>
        <%= button_to t("common.actions.duplicate"), duplicate_event_mapping_path(mapping), method: :post, form: { data: { turbo_stream: true } }, class: "cursor-pointer rounded-lg border border-slate-700 px-2 py-1 text-xs text-slate-200 hover:border-slate-500" %>
        <%= form_with url: event_mapping_path(mapping), method: :delete, data: { turbo_stream: true, controller: "confirm", confirm_message_value: t("ui.mappings.confirm_delete", name: mapping.pattern) }, class: "inline" do %>
          <button type="submit" class="cursor-pointer rounded-lg border border-slate-700 px-2 py-1 text-xs text-slate-200 hover:border-slate-500"><%= t("common.actions.remove") %></button>
        <% end %>
      </div>
    </td>
  </tr>
