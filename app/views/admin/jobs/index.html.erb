<%= render "shared/page_header",
      nav_active: :jobs,
      icon: content_tag(:svg, content_tag(:path, "", d: "M9 3a2 2 0 00-2 2v1H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-2V5a2 2 0 00-2-2H9zm0 3V5h6v1H9z"), xmlns: "http://www.w3.org/2000/svg", viewBox: "0 0 24 24", fill: "currentColor", class: "h-6 w-6"),
      title: t("ui.jobs.header"),
      subtitle: t("ui.jobs.subheader") do %>
  <div class="space-y-6">
    <!-- Job Queue Stats -->
    <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
      <h2 class="mb-4 text-lg font-semibold">Job Queue Status</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="rounded-lg border border-slate-800 bg-slate-950/40 p-4 text-center">
          <p class="text-xs text-slate-400"><%= t("ui.jobs.queued") %></p>
          <p class="text-2xl font-semibold"><%= @queued %></p>
        </div>
        <div class="rounded-lg border border-slate-800 bg-slate-950/40 p-4 text-center">
          <p class="text-xs text-slate-400"><%= t("ui.jobs.completed_24h") %></p>
          <p class="text-2xl font-semibold"><%= @completed %></p>
        </div>
        <div class="rounded-lg border border-slate-800 bg-slate-950/40 p-4 text-center">
          <p class="text-xs text-slate-400"><%= t("ui.jobs.failed") %></p>
          <p class="text-2xl font-semibold"><%= @failed %></p>
        </div>
        <div class="rounded-lg border border-slate-800 bg-slate-950/40 p-4 text-center">
          <p class="text-xs text-slate-400"><%= t("ui.jobs.worker_processes") %></p>
          <p class="text-2xl font-semibold"><%= @processes %></p>
        </div>
      </div>
    </div>

    <!-- Auto-sync Stats -->
    <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
      <h2 class="mb-4 text-lg font-semibold">Auto-sync Statistics</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        <div class="rounded-lg border border-indigo-800/50 bg-indigo-950/20 p-4 text-center">
          <p class="text-xs text-indigo-300"><%= t("ui.jobs.auto_sync_sources") %></p>
          <p class="text-2xl font-semibold text-indigo-200"><%= @auto_sync_sources_active %>/<%= @auto_sync_sources_total %></p>
        </div>
        <div class="rounded-lg border border-yellow-800/50 bg-yellow-950/20 p-4 text-center">
          <p class="text-xs text-yellow-300"><%= t("ui.jobs.sync_due") %></p>
          <p class="text-2xl font-semibold text-yellow-200"><%= @auto_sync_sources_due %></p>
        </div>
        <div class="rounded-lg border border-slate-800 bg-slate-950/40 p-4 text-center">
          <p class="text-xs text-slate-400"><%= t("ui.jobs.auto_sync_jobs_24h") %></p>
          <p class="text-2xl font-semibold"><%= @auto_sync_scheduler_jobs %></p>
        </div>
        <div class="rounded-lg border border-slate-800 bg-slate-950/40 p-4 text-center">
          <p class="text-xs text-slate-400"><%= t("ui.jobs.sync_jobs_24h") %></p>
          <p class="text-2xl font-semibold"><%= @sync_calendar_jobs %></p>
        </div>
        <div class="rounded-lg border border-emerald-800/50 bg-emerald-950/20 p-4 text-center">
          <p class="text-xs text-emerald-300"><%= t("ui.jobs.auto_syncs_24h") %></p>
          <p class="text-2xl font-semibold text-emerald-200"><%= @auto_sync_attempts %></p>
        </div>
        <div class="rounded-lg border border-slate-800 bg-slate-950/40 p-4 text-center">
          <p class="text-xs text-slate-400"><%= t("ui.jobs.manual_syncs_24h") %></p>
          <p class="text-2xl font-semibold"><%= @manual_sync_attempts %></p>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
      <h2 class="mb-2 text-lg font-semibold"><%= t("ui.jobs.recent_attempts") %></h2>
      <div class="overflow-auto">
        <table class="w-full text-left text-sm">
          <thead class="bg-slate-900/60 text-slate-400">
            <tr>
              <th class="px-3 py-2"><%= t("ui.jobs.source") %></th>
              <th class="px-3 py-2"><%= t("ui.jobs.type") %></th>
              <th class="px-3 py-2"><%= t("ui.jobs.status") %></th>
              <th class="px-3 py-2"><%= t("ui.jobs.totals") %></th>
              <th class="px-3 py-2"><%= t("ui.jobs.when") %></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-800">
            <% @recent_attempts.each do |a| %>
              <tr>
                <td class="px-3 py-2"><%= a.calendar_source&.name || "Unknown" %></td>
                <td class="px-3 py-2">
                  <% if a.calendar_source&.auto_sync_enabled? %>
                    <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5 bg-indigo-500/10 text-indigo-300 text-xs">
                      <span class="h-1.5 w-1.5 rounded-full bg-indigo-400"></span>
                      Auto
                    </span>
                  <% else %>
                    <span class="inline-flex items-center gap-1 rounded-full px-2 py-0.5 bg-slate-800 text-slate-400 text-xs">
                      <span class="h-1.5 w-1.5 rounded-full bg-slate-600"></span>
                      Manual
                    </span>
                  <% end %>
                </td>
                <td class="px-3 py-2"><%= a.status %></td>
                <td class="px-3 py-2"><%= t("ui.jobs.totals_row", upserts: a.upserts, deletes: a.deletes, errors: a.errors_count) %></td>
                <td class="px-3 py-2"><%= time_ago_in_words(a.created_at) %> ago</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
      <div class="mb-2 flex items-center justify-between">
        <h2 class="text-lg font-semibold"><%= t("ui.jobs.recent_metrics") %></h2>
        <%= button_to t("ui.jobs.clear_metrics"),
              clear_metrics_admin_jobs_path,
              method: :post,
              form: { data: { controller: "confirm", confirm_message_value: t("ui.jobs.confirm_clear_metrics") } },
              class: "cursor-pointer rounded border border-slate-700 px-3 py-1 text-xs text-slate-200 hover:border-slate-500" %>
      </div>
      <% if @recent_metrics.any? %>
        <div class="overflow-auto">
          <table class="w-full text-left text-sm">
            <thead class="bg-slate-900/60 text-slate-400">
              <tr>
                <th class="px-3 py-2"><%= t("ui.jobs.when") %></th>
                <th class="px-3 py-2"><%= t("ui.jobs.source") %></th>
                <th class="px-3 py-2"><%= t("ui.jobs.fetched") %></th>
                <th class="px-3 py-2"><%= t("ui.jobs.upserts") %></th>
                <th class="px-3 py-2"><%= t("ui.jobs.deletes") %></th>
                <th class="px-3 py-2"><%= t("ui.jobs.canceled") %></th>
                <th class="px-3 py-2"><%= t("ui.jobs.duration") %></th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-800">
              <% @recent_metrics.reverse_each do |m| %>
                <tr>
                  <td class="px-3 py-2"><%= time_ago_in_words(m[:at]) %> ago</td>
                  <td class="px-3 py-2"><%= @source_names[m[:source_id]] || t("common.ids.unknown_id", id: m[:source_id]) %></td>
                  <td class="px-3 py-2"><%= m[:fetched] %></td>
                  <td class="px-3 py-2"><%= m[:upserts] %></td>
                  <td class="px-3 py-2"><%= m[:deletes] %></td>
                  <td class="px-3 py-2"><%= m[:canceled] %></td>
                  <td class="px-3 py-2"><%= m[:duration_ms] %> ms</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-sm text-slate-400"><%= t("ui.jobs.none_captured") %></p>
      <% end %>
    </div>
  </div>
<% end %>
