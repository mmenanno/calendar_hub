<div id="filter_test_result" class="rounded-lg border border-slate-600 bg-slate-800/30 p-3">
  <div class="mb-2 flex items-center gap-2">
    <span class="text-sm font-medium text-slate-300"><%= t("ui.test_result.label") %></span>
    <% if should_filter %>
      <span class="inline-flex items-center rounded-full bg-red-900 px-2 py-1 text-xs font-medium text-red-300">
        <%= t("ui.test_result.filtered") %>
      </span>
    <% else %>
      <span class="inline-flex items-center rounded-full bg-green-900 px-2 py-1 text-xs font-medium text-green-300">
        <%= t("ui.test_result.synced") %>
      </span>
    <% end %>
  </div>
  <div class="text-xs text-slate-400">
    <div><strong><%= t("ui.test_result.title") %>:</strong> <%= input[:title].presence || "—" %></div>
    <div><strong><%= t("ui.test_result.description") %>:</strong> <%= input[:description].presence || "—" %></div>
    <div><strong><%= t("ui.test_result.location") %>:</strong> <%= input[:location].presence || "—" %></div>
  </div>
</div>
