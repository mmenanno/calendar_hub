<div class="min-h-screen bg-slate-950 text-slate-100">
  <header class="bg-slate-900/70 backdrop-blur sticky top-0 z-10 border-b border-slate-800">
    <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
      <div class="flex items-center gap-3">
        <span class="inline-flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-500/20 text-indigo-300">
          <%= local_assigns[:icon] || content_for(:page_icon) %>
        </span>
        <div>
          <h1 class="text-xl font-semibold"><%= local_assigns[:title] || content_for(:page_title) %></h1>
          <p class="text-sm text-slate-400"><%= local_assigns[:subtitle] || content_for(:page_subtitle) %></p>
        </div>
      </div>
      <%= render "shared/top_nav", active: local_assigns[:nav_active] %>
    </div>
  </header>

  <section class="mx-auto w-full <%= local_assigns[:max_width] || "max-w-6xl" %> px-6 py-8">
    <%= render "shared/flashes" %>
    <%= yield %>
  </section>
</div>
