<div class="mb-4 flex items-center justify-between">
  <% p = CalendarEventPresenter.new(event, self) %>
  <div class="text-sm text-slate-400">Source: <span class="text-slate-300"><%= p.source_name %></span></div>
  <div>
    <%= button_to(
          event.sync_exempt? ? "Include in Apple Calendar" : "Exclude from Apple Calendar",
          toggle_sync_calendar_event_path(event),
          method: :patch,
          form: { data: { turbo_stream: true } },
          class: "cursor-pointer rounded-lg border border-slate-700 px-3 py-2 text-sm text-slate-200 hover:border-slate-500",
        ) %>
  </div>
</div>

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
  <div class="mb-4 grid gap-4 text-sm text-slate-300 md:grid-cols-4">
    <div>
      <p class="text-slate-500">Starts</p>
      <p><%= p.starts_at_long %></p>
    </div>
    <div>
      <p class="text-slate-500">Ends</p>
      <p><%= p.ends_at_long %></p>
    </div>
    <div>
      <p class="text-slate-500">Duration</p>
      <p><%= p.duration_human %></p>
    </div>
    <div class="text-right md:text-left">
      <p class="text-slate-500">Last synced</p>
      <p><%= p.last_synced_text %></p>
    </div>
  </div>

  <dl class="grid gap-4 text-sm text-slate-300 md:grid-cols-2">
    <div>
      <dt class="font-medium text-slate-500">Location</dt>
      <dd><%= p.location %></dd>
    </div>
    <div>
      <dt class="font-medium text-slate-500">Status</dt>
      <dd class="capitalize <%= p.status_badge_class %>"><%= p.status %></dd>
    </div>
    <div>
      <dt class="font-medium text-slate-500">Time Zone</dt>
      <dd><%= event.time_zone %></dd>
    </div>
    <div>
      <dt class="font-medium text-slate-500">Source</dt>
      <dd><%= p.source_name %></dd>
    </div>
    <div class="md:col-span-2">
      <dt class="font-medium text-slate-500">Description</dt>
      <dd class="whitespace-pre-wrap"><%= event.description.presence || "â€”" %></dd>
    </div>
    <div class="md:col-span-2">
      <dt class="font-medium text-slate-500">Direct Link</dt>
      <dd>
        <% opts = UrlOptions.for_links %>
        <% link_url = calendar_event_url(event, **opts) %>
        <div class="flex items-center gap-2">
          <code class="rounded bg-slate-800 px-2 py-1 text-xs"><%= link_url %></code>
          <button type="button" data-controller="clipboard" data-clipboard-text-value="<%= link_url %>" data-action="click->clipboard#copy" class="cursor-pointer rounded border border-slate-700 px-2 py-1 text-xs text-slate-200 hover:border-slate-500">
            <span data-clipboard-target="label">Copy</span>
          </button>
        </div>
      </dd>
    </div>
  </dl>
</div>
