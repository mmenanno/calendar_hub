<div class="mb-4 flex items-center justify-between">
  <% p = CalendarEventPresenter.new(event, self) %>
  <div class="text-sm text-slate-400">Source: <span class="text-slate-300"><%= p.source_name %></span></div>
  <div>
    <%= button_to(
          event.sync_exempt? ? t("ui.events.include") : t("ui.events.exclude"),
          toggle_sync_calendar_event_path(event),
          method: :patch,
          form: { data: { turbo_stream: true } },
          class: "cursor-pointer rounded-lg border border-slate-700 px-3 py-2 text-sm text-slate-200 hover:border-slate-500",
        ) %>
  </div>
</div>

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
  <div class="mb-4 grid gap-4 text-sm text-slate-300 md:grid-cols-4">
    <div>
      <p class="text-slate-500"><%= t("ui.events.starts") %></p>
      <p><%= p.starts_at_long %></p>
    </div>
    <div>
      <p class="text-slate-500"><%= t("ui.events.ends") %></p>
      <p><%= p.ends_at_long %></p>
    </div>
    <div>
      <p class="text-slate-500"><%= t("ui.events.duration") %></p>
      <p><%= p.duration_precise %></p>
    </div>
    <div class="text-right md:text-left">
      <p class="text-slate-500"><%= t("common.fields.last_synced") %></p>
      <p><%= p.last_synced_text %></p>
    </div>
  </div>

  <dl class="grid gap-4 text-sm text-slate-300 md:grid-cols-2">
    <% if p.title_mapped? %>
      <div class="md:col-span-2">
        <dt class="font-medium text-slate-500"><%= t("ui.events.original_title") %></dt>
        <dd><%= p.original_title %></dd>
      </div>
    <% end %>
    <div>
      <dt class="font-medium text-slate-500"><%= t("ui.events.location") %></dt>
      <dd><%= p.location %></dd>
    </div>
    <div>
      <dt class="font-medium text-slate-500"><%= t("ui.events.status") %></dt>
      <dd class="capitalize <%= p.status_badge_class %>"><%= p.status %></dd>
    </div>
    <div>
      <dt class="font-medium text-slate-500"><%= t("ui.events.time_zone") %></dt>
      <dd><%= event.time_zone %></dd>
    </div>
    <div>
      <dt class="font-medium text-slate-500"><%= t("ui.events.source") %></dt>
      <dd><%= p.source_name %></dd>
    </div>
    <div class="md:col-span-2">
      <dt class="font-medium text-slate-500"><%= t("ui.events.description") %></dt>
      <dd class="whitespace-pre-wrap"><%= event.description.presence || "â€”" %></dd>
    </div>
    <div class="md:col-span-2">
      <dt class="font-medium text-slate-500"><%= t("ui.events.direct_link") %></dt>
      <dd>
        <% opts = CalendarHub::UrlOptions.for_links %>
        <% link_url = calendar_event_url(event, **opts) %>
        <div class="flex items-center gap-2">
          <code class="rounded bg-slate-800 px-2 py-1 text-xs"><%= link_url %></code>
          <button type="button" data-controller="clipboard" data-clipboard-text-value="<%= link_url %>" data-action="click->clipboard#copy" class="cursor-pointer rounded border border-slate-700 px-2 py-1 text-xs text-slate-200 hover:border-slate-500">
            <span data-clipboard-target="label"><%= t("common.actions.copy") %></span>
          </button>
        </div>
      </dd>
    </div>
  </dl>
</div>
