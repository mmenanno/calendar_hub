<%= turbo_stream_from "calendar_events" %>

<div class="min-h-screen bg-slate-950 text-slate-100">
  <header class="bg-slate-900/70 backdrop-blur sticky top-0 z-10 border-b border-slate-800">
    <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
      <div class="flex items-center gap-3">
        <span class="inline-flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-500/20 text-indigo-300">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10m-11 8h12a2 2 0 002-2v-8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
        </span>
        <div>
          <h1 class="text-xl font-semibold"><%= t("app.title") %></h1>
          <p class="text-sm text-slate-400"><%= t("app.tagline") %></p>
        </div>
      </div>
      <div class="flex items-center gap-3 text-sm">
        <%= render "shared/top_nav", active: :events %>
      </div>
    </div>
  </header>

  <section class="mx-auto w-full max-w-6xl px-6 py-8">
    <%= render "shared/flashes" %>

    <div class="grid gap-8 lg:grid-cols-[2fr,1fr]">
      <div>
        <div class="mb-4 flex items-center justify-between">
          <div class="flex items-center gap-4">
            <div>
              <h2 class="text-lg font-semibold"><%= t("ui.events.upcoming") %></h2>
              <% if @selected_source %>
                <p class="text-sm text-slate-400"><%= t("ui.events.filtered_to", name: @selected_source.name) %></p>
              <% end %>
            </div>
            <%= link_to calendar_events_path(source_id: params[:source_id], q: params[:q], show_excluded: !@show_excluded),
                  class: "inline-flex items-center gap-2 rounded-lg border px-3 py-1.5 text-sm transition #{"border-amber-500/30 bg-amber-500/10 text-amber-300" if @show_excluded} #{"border-slate-700 bg-slate-800/50 text-slate-300 hover:border-slate-600" unless @show_excluded}" do %>
              <% if @show_excluded %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L8.464 8.464M9.878 9.878a3 3 0 105.303 5.303m0 0L8.464 8.464M5.036 13.69L8.464 8.464m0 0L5.036 13.69m3.428-5.226a9.972 9.972 0 00-.428 1.849m4.243 4.243a3.001 3.001 0 01-4.243-4.243m4.243 4.243L19.536 10.31M9.878 9.878a3 3 0 014.243 4.243M9.878 9.878L8.464 8.464" />
                </svg>
                <%= t("ui.events.hide_excluded") %>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <%= t("ui.events.show_excluded") %>
              <% end %>
            <% end %>
          </div>
          <div class="text-right">
            <div class="flex items-center justify-end gap-2 mb-2">
              <turbo-frame id="events-search-form">
                <%= form_with url: calendar_events_path, method: :get, data: { controller: "search", search_target: "form", turbo_frame: "events-list" }, class: "inline-flex items-center gap-2" do |form| %>
                  <div class="select-chevron wide-select-lg">
                    <%= form.collection_select(:source_id, @calendar_sources, :id, :name, { include_blank: t("ui.events.all_sources"), selected: params[:source_id].presence || @selected_source&.id }, class: select_class, data: { action: "change->search#submitForm" }) %>
                  </div>
                  <%= form.text_field(:q, value: params[:q], placeholder: t("ui.events.search_placeholder"), class: input_class, data: { search_target: "input", action: "input->search#search" }) %>
                  <%= form.hidden_field(:show_excluded, value: @show_excluded) %>
                  <% if params[:source_id].present? || params[:q].present? %>
                    <%= link_to t("common.actions.clear"), calendar_events_path(show_excluded: @show_excluded), class: "text-sm text-slate-400 hover:text-slate-200" %>
                  <% end %>
                <% end %>
              </turbo-frame>
              <%= link_to t("navigation.sync_all"), sync_all_calendar_sources_path, class: "rounded-lg bg-indigo-500 px-3 py-2 text-sm font-medium text-white transition hover:bg-indigo-400", data: { turbo_method: :post } %>
            </div>
            <p class="mt-1 text-xs text-slate-400"><%= t("ui.events.filter_hint") %></p>
          </div>
        </div>
        <turbo-frame id="events-list">
          <div id="calendar-events" class="space-y-4">
            <% if @events.any? %>
              <%= render partial: "calendar_events/calendar_event", collection: @events, as: :calendar_event %>
            <% else %>
              <div class="rounded-xl border border-dashed border-slate-800 bg-slate-900/50 p-6 text-center text-sm text-slate-400">
                <% if @selected_source %>
                  <%= t("ui.events.none_for_selected", name: @selected_source.name) %>
                <% else %>
                  <%= t("ui.events.none_connect") %>
                <% end %>
              </div>
            <% end %>
          </div>
        </turbo-frame>
      </div>

      <aside class="space-y-4">
        <div class="rounded-2xl border border-slate-800 bg-slate-900/70 p-5">
          <div class="mb-4 flex items-center justify-between">
            <h3 class="text-base font-semibold text-slate-100"><%= t("ui.sources.header") %></h3>
            <div class="flex items-center gap-3">
              <%= link_to t("common.actions.manage"), calendar_sources_path, class: "text-sm text-indigo-300 hover:text-indigo-200" %>
            </div>
          </div>
          <div class="space-y-3">
            <% @calendar_sources.each do |source| %>
              <%= render "calendar_sources/source", source: source %>
            <% end %>
          </div>
        </div>
      </aside>
    </div>
  </section>
</div>
